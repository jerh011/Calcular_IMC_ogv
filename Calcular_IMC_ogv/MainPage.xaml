<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calcular_IMC_ogv.MainPage"
             Visual="Material">

    <StackLayout Margin="10,10">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calcular IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Peso en Kg"/>
        <Entry Placeholder="Peso(Kg)" x:Name="Peso" Keyboard="Numeric"/>
        <Label Text="Altura en m"/>
        <Entry Placeholder="Altura(m)" x:Name="Altura" Keyboard="Numeric"/>
        <Entry Placeholder="IMC" x:Name="IMC" IsEnabled="False"/>
        <Button Text="Calcular IMC" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
